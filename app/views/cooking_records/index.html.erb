<%= link_to '戻る', root_path, class: "inline-flex h-12 items-center justify-center rounded-md px-6 bold font-bold text-white bg-[#212121]" %>
<% if @cooking_records.present? %>
  <% @cooking_records.each do |cooking_record| %>
    <p>
      作った日: <%= cooking_record.cooked_on.strftime("%Y/%m/%d") %><br>
      料理名: <%= cooking_record.dish_name %>
    </p>
  <% end %>
<% end %>
