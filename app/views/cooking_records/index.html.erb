<div class="max-w-xl mx-auto px-4">
  <h1 class="mb-2 block max-w-xl mx-auto text-lg font-semibold ">料理記録の一覧</h1>
  <%= link_to 'ホームに戻る', dashboard_path, class: "mt-4 py-3 block w-full max-w-xl mx-auto flex items-center justify-center rounded-md font-bold text-white bg-[#212121]" %>
  <div class="pt-4 block w-full max-w-xl mx-auto space-y-4">
    <% if @cooking_records.present? %>
      <% @cooking_records.each do |cooking_record| %>
        <%= link_to cooking_record_path(cooking_record), class: "p-4 rounded bg-gray-100 block" do %>
          <p>
            作った日: <%= cooking_record.cooked_on.strftime("%Y/%m/%d") %><br>
            料理名: <%= cooking_record.dish_name %>
          </p>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
