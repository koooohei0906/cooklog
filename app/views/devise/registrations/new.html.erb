<div class="flex justify-center">
  <div class="w-full max-w-xl bg-gray-200 rounded-md-lg px-8 py-10 mx-4">
    <h2 class="text-center text-2xl font-bold mb-10">アカウントを作成</h2>

    <% if flash[:alert].present? %>
      <div class="mb-5 rounded-md bg-red-500 px-4 py-3 text-white font-semibold">
        <button type="button" class="float-right ml-4 cursor-pointer text-2xl leading-5 text-white transition hover:text-black" onclick="this.parentElement.style.display='none';">&times;</button>
        <%= flash[:alert] %>
      </div>
    <% end %>

    <%= render "devise/shared/error_messages", resource: resource %>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-8" }) do |f| %>

      <!-- ユーザー名 -->
      <div>
        <%= f.label :name, "ユーザー名", class: "block mb-2 text-lg font-semibold" %>
        <%= f.text_field :name, autofocus: true, class: "w-full rounded-md border border-gray-300 px-3 py-3 bg-white" %>
      </div>

      <!-- メールアドレス -->
      <div>
        <%= f.label :email, "メールアドレス", class: "block mb-2 text-lg font-semibold" %>
        <%= f.email_field :email, autocomplete: "email", class: "w-full rounded-md border border-gray-300 px-3 py-3 bg-white" %>
      </div>

      <!-- パスワード -->
      <div>
        <%= f.label :password, "パスワード", class: "block mb-2 text-lg font-semibold" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full rounded-md border border-gray-300 px-3 py-3 bg-white" %>
      </div>

      <!-- パスワード（確認） -->
      <div>
        <%= f.label :password_confirmation, "パスワード（確認）", class: "block mb-2 text-lg font-semibold" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full rounded-md border border-gray-300 px-3 py-3 bg-white" %>
      </div>

      <!-- アカウント作成ボタン -->
      <div>
        <%= f.submit "アカウントを作成", class: "w-full py-3 rounded-md font-bold bg-[#FFC943] text-white" %>
      </div>
    <% end %>

    <!-- 既にアカウントをお持ちの方 -->
    <div class="mt-6 text-center text-sm">
      <%= link_to "既にアカウントをお持ちの方", new_session_path(resource_name), class: "underline" %>
    </div>
  </div>
</div>
<div class="mt-4 w-full max-w-xl mx-auto flex flex-col gap-3">
  <%= button_to user_google_oauth2_omniauth_authorize_path, method: :post, data: { turbo: false }, class: "w-full flex-1 py-3 rounded-md font-bold bg-white text-gray-900 border border-gray-300 flex items-center justify-center gap-2 hover:bg-gray-50" do %>
    <span class="inline-flex h-5 w-5">
      <svg version="1.1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48" style="display:block;">
        <path fill="#EA4335" d="M24 9.5c3.54 0 6.71 1.22 9.21 3.6l6.85-6.85C35.9 2.38 30.47 0 24 0 14.62 0 6.51 5.38 2.56 13.22l7.98 6.19C12.43 13.72 17.74 9.5 24 9.5z"></path>
        <path fill="#4285F4" d="M46.98 24.55c0-1.57-.15-3.09-.38-4.55H24v9.02h12.94c-.58 2.96-2.26 5.48-4.78 7.18l7.73 6c4.51-4.18 7.09-10.36 7.09-17.65z"></path>
        <path fill="#FBBC05" d="M10.53 28.59c-.48-1.45-.76-2.99-.76-4.59s.27-3.14.76-4.59l-7.98-6.19C.92 16.46 0 20.12 0 24c0 3.88.92 7.54 2.56 10.78l7.97-6.19z"></path>
        <path fill="#34A853" d="M24 48c6.48 0 11.93-2.13 15.89-5.81l-7.73-6c-2.15 1.45-4.92 2.3-8.16 2.3-6.26 0-11.57-4.22-13.47-9.91l-7.98 6.19C6.51 42.62 14.62 48 24 48z"></path>
        <path fill="none" d="M0 0h48v48H0z"></path>
      </svg>
    </span>
    <span>Googleでログイン</span>
  <% end %>
  <%= link_to '戻る', root_path, class: "flex-1 py-3 flex items-center justify-center rounded-md font-bold text-white bg-[#212121]" %>
</div>
