<header class="w-full bg-gray-200">
  <div class="mx-auto flex h-14 max-w-6xl items-center justify-between px-4">
    <!-- ロゴ -->
    <%= link_to "ロゴ", dashboard_path, class: "text-lg font-semibold" %>
    
    <!-- ハンバーガーメニュー -->
    <div class="flex justify-center items-center" data-controller="hamburger" data-hamburger-open-value="false">
      <!-- アイコン -->
      <% line_base = "absolute left-0 block h-0.5 w-full rounded-lg bg-black transition-all duration-300 ease-in-out origin-center" %>
      <button type="button" class="relative z-50 inline-flex h-10 w-10 items-center justify-center" aria-label="Open menu" aria-controls="mobile-menu" aria-expanded="false" data-action="click->hamburger#toggle" data-hamburger-target="button">
        <span class="relative block h-4 w-5">
          <span class="<%= "#{line_base} top-0" %>" data-hamburger-target="line1"></span>
          <span class="<%= "#{line_base} top-1/2 -translate-y-1/2" %>" data-hamburger-target="line2"></span>
          <span class="<%= "#{line_base} top-full -translate-y-full" %>" data-hamburger-target="line3"></span>
        </span>
      </button>

      <!-- メニュー本体（画面右外→スライドイン） -->
      <div id="mobile-menu" class="fixed inset-0 z-40 h-screen w-screen bg-white transform translate-x-full transition-transform duration-300 ease-in-out" data-hamburger-target="panel" data-action="click->hamburger#closeOnBackdrop">
        <nav class="flex h-full items-center justify-center" aria-label="Mobile">
          <ul class="flex flex-col items-center gap-8 text-2xl">
            <li><%= link_to "About", "#", class: "text-black no-underline", data: { action: "click->hamburger#close" } %></li>
            <li><%= link_to "About", "#", class: "text-black no-underline", data: { action: "click->hamburger#close" } %></li>
            <li><%= link_to "About", "#", class: "text-black no-underline", data: { action: "click->hamburger#close" } %></li>
          </ul>
        </nav>
      </div>
    </div>
  </div>
</header>
