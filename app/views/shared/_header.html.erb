<header class="bg-gray-200">
  <div class="max-w-5xl mx-auto flex items-center py-4 px-6">
    <% if user_signed_in? %>
      <!-- ログイン済み -->
      <p class="text-left p-2 bg-white rounded-md">ロゴ</p>
      <%= link_to "ログアウト", destroy_user_session_path, data: { turbo_method: :delete }, class: "font-bold ml-auto text-[#D32F2F]" %>
    <% else %>
      <!-- 未ログイン -->
      <p class="text-left p-2 bg-white rounded-md">ロゴ</p>
      <div class="ml-auto flex items-center gap-8 ">
        <%= link_to "ログイン", new_user_session_path, class: "font-bold" %>
        <%= link_to "会員登録", new_user_registration_path, class: "inline-block rounded-md-full px-6 py-2 font-bold text-white bg-[#FFC943]" %>
      </div>
    <% end %>
  </div>
</header>